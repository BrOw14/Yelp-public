<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/login.css" />
<div class="container d-flex justify-content-center align-items-center mt-5">
	<div class="row">
		<div class="card shadow bg-white bg-opacity-25 px-5">
			<div class="card-body">
				<h5 class="card-title text-white">Register</h5>
				<form
					action="/register"
					method="POST"
					class="validated-form d-flex flex-column text-white"
					novalidate
				>
					<div class="mb-3">
						<label class="form-label" for="username">Username</label>
						<input
							class="form-control"
							type="text"
							id="username"
							name="username"
							required
							autofocus
						/>
						<div class="valid-feedback">Looks good!</div>
					</div>
					<div class="mb-3">
						<label class="form-label" for="email">Email</label>
						<input
							class="form-control"
							type="email"
							id="email"
							name="email"
							required
						/>
						<div class="valid-feedback">Looks good!</div>
					</div>
					<div class="mb-3">
						<label class="form-label" for="password">Password</label>
						<input
							class="form-control"
							type="password"
							id="password"
							name="password"
							required
						/>
						<div class="valid-feedback">Looks good!</div>
					</div>
					<button class="btn btn-success">Register</button>
				</form>
			</div>
		</div>
	</div>
</div>
